<UserControl x:Class="WPFTreeView.View.MyTreeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFTreeView.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate x:Key="MyTreeTemplate" ></DataTemplate>
    </UserControl.Resources>
    <!--ItemContainerStyle="{StaticResource iStyle_RadTreeViewItemDark}"-->
    <local:TreeViewSelector ItemsSource="{Binding Path=Items}" SelectedItem="{Binding Item}"
             
             
                              Style="{StaticResource TreeViewStyle1}"               
                            ItemContainerStyle="{StaticResource TreeViewItemStyle1}"
                              >

        <local:TreeViewSelector.ItemTemplate>
            <HierarchicalDataTemplate ItemsSource="{Binding Children}"  >
                <StackPanel Orientation="Horizontal">
                    <!--<Image Margin="0,0,4,0" Grid.Column="0" Width="16" Height="16" Source="{Binding Icon}" />-->
                    <Rectangle >
                        <Rectangle.OpacityMask>
                            <ImageBrush ImageSource="{Binding Image}" Stretch="Uniform"  />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <TextBlock Text="{Binding Name}" Style="{StaticResource iStyle_TextBlockTreeViewT1}" />
                </StackPanel>
            </HierarchicalDataTemplate>

        </local:TreeViewSelector.ItemTemplate>


    </local:TreeViewSelector>
</UserControl>
